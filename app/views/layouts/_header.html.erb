<header class="navbar navbar-default navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% cache "logo" do %>
      <%= link_to image_tag("cba_logo.png", alt: ""), root_path, :class => "brand" %>
      <% end %>
    <nav>
      <ul class="nav nav-pills pull-right">
        <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.email %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <%= render 'layouts/header/header_account_button' %>
              </ul>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= "Загрузка данных от банка" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to (I18n.t 'menu.test'), tests_path %></li>
                <li><%= link_to (I18n.t 'menu.house'), houses_path %></li>
                <li><%= link_to (I18n.t 'menu.appartment'), apartments_path %></li>
                <li><%= link_to (I18n.t 'menu.earth'), earths_path %></li>
              </ul>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= "Загрузка аналогов" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to (I18n.t 'menu.test'), tests_path %></li>
                <li><%= link_to (I18n.t 'menu.house'), anearts_path %></li>
                <li><%= link_to (I18n.t 'menu.appartment'), anaprtments_path %></li>
                <li><%= link_to (I18n.t 'menu.earth'), tests_path %></li>
              </ul>
            </li>
            <% if current_user && current_user.try(:admin?) %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= "Настройки системы" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% if current_user && current_user.try(:admin?) %>
                    <li><%= link_to 'Пользователи системы', users_path %></li>
                    <li class="divider"></li>
                <% else %>
                <% end %>
                <li><%= link_to "Настройка параметров и коэффициентов", tests_path %></li>
              </ul>
            </li>
            <% end %>
      <% else %>
            <li><%= link_to 'Вход', signin_path %></li>
        <% end %>
      </ul>
    </nav>
    </div>
  </div>
</header>