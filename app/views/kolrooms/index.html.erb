<div class="panel" data-role="panel">
  <div class="panel-header bg-cyan">
     Количество комнат
  </div>
  <div class="panel-content">
    <table class="table table-striped table-hover hovered striped bordered">
      <thead>
      <tr>
        <th rowspan="2">Аналог</th>
        <th colspan="5">Об'єкт оцінки</th>
      </tr>
      <tr>
        <th>1</th>
        <th>2</th>
        <th>3</th>
        <th>4</th>
        <th>Действия</th>
      </tr>
      </thead>
  <tbody>
    <% @kolrooms.each do |kolroom| %>
      <tr>
        <td><%= kolroom.num_analog %></td>
        <td><%= kolroom.o1 %>%</td>
        <td><%= kolroom.o2 %>%</td>
        <td><%= kolroom.o3 %>%</td>
        <td><%= kolroom.o4 %>%</td>
        <td><%= link_to 'Изменить', edit_kolroom_path(kolroom), class: "button normal bg-orange" %><br/>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
