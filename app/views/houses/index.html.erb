
<div class="span12">
  <h1>Дом</h1>
  <div class="row">
    <div class="span6">
      <div class="panel" data-role="panel">
        <div class="panel-header bg-lime">
          <%= (I18n.t 'button.import') %> *.XLS
        </div>
        <div class="panel-content">
          <%= form_tag import_houses_path, multipart: true do %>
              <%= file_field_tag :file %>
              <%= submit_tag (I18n.t 'button.import'), class: "button large" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="span6">
      <div class="panel" data-role="panel">
        <div class="panel-header bg-lightOrange">
          <%= (I18n.t 'button.download') %> *.XLS
        </div>
        <div class="panel-content">

          <button class="image-button primary">
            <%= link_to (I18n.t 'button.download') , houses_path(format: "xls")%>
            <i class="icon-download-2"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="panel" data-role="panel">
    <div class="panel-header bg-yellow">
      <%= 'Обработка загруженных данных' %>
    </div>
    <div class="panel-content">

      <div class="span6">
        <h5 align="center"><%= link_to "Обработать данные", houses_path, class: "button large bg-green" %></h5>
        <h5 align="center"><%= "Статус обработки..." %></h5>
        <div class="progress-bar large" data-role="progress-bar" data-color="bg-green">20%</div>
      </div>
      <div class="span6">
        <% if @houses.empty? %>
        <% else %>
            <%= form_for(Destroyall.destroy_all(House), :html => {:method => 'delete'}) do |f| %>
                <%= f.submit "Очистка базы", class: "button large bg-red", data: { confirm: 'Are you sure?' } %>
            <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>
<div class="panel" data-role="panel">
  <div class="panel-header bg-cyan">
    Список домов
  </div>
  <div class="panel-content">
    <div align="center">
      <%= will_paginate %>
    </div>
    <table class="table table-striped table-hover hovered striped bordered">
      <thead>
      <tr>
        <th>Kод oбеспечення</th>
        <th>Тип обеспечения</th>
        <th>Область</th>
        <th>Район</th>
        <th>Город</th>
        <th>Тип улицы</th>
        <th>Название улицы</th>
        <th>Название улицы</th>
        <th>Номер дома</th>
        <th>Номер корпуса</th>
        <th>Номер квартиры</th>
        <th>Общая площадь, кв.м</th>
        <th>Жилая площадь, кв.м</th>
        <th>Площадь земельного участка, Га</th>
        <th>№ района</th>
        <th>Категория ремонту</th>
        <th>Рыночная стоимость, грн</th>
        <th>Рыночная стоимость, дол.США</th>
        <th>Рыночная стоимость, евро</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.code_provision %></td>
        <td><%= house.tip %></td>
        <td><%= house.region %></td>
        <td><%= house.district %></td>
        <td><%= house.city %></td>
        <td><%= house.street_type %></td>
        <td><%= house.street_name %></td>
        <td><%= house.street_name2 %></td>
        <td><%= house.number_home %></td>
        <td><%= house.number_housing %></td>
        <td><%= house.room_apartment %></td>
        <td><%= house.total_area %></td>
        <td><%= house.floor_area %></td>
        <td><%= house.area_land %></td>
        <td><%= house.district_number %></td>
        <td><%= house.kategorіya_repair %></td>
        <td><%= house.uah_market_value %></td>
        <td><%= house.usd_market_value %></td>
        <td><%= house.euro_market_value %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div align="center">
  <%= will_paginate %>
</div>
</div>
</div>