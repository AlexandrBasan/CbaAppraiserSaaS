      <tbody>
          <tr>
            <td><%= capartment.anaprtment.location %></td>
            <td><%= capartment.anaprtment.cost_one %></td>
            <td><%= capartment.auction %>%</td>
            <td><%= capartment.tip_house %></td>
            <td><%= capartment.value_repair %></td>
            <td><%= capartment.storey %></td>
