<div class="panel" data-role="panel">
  <div class="panel-header bg-cyan fg-white">
    Системные настройки
  </div>
  <div class="panel-content">
    <table class="table table-striped table-hover hovered striped bordered">
  <thead>
    <tr>
      <th>Торг для квартир</th>
      <th>Торг для земли</th>
      <th>торг для дома</th>
      <th>Значение этажности для квартир</th>
      <th>Местоположение для земли</th>
      <th>Инфраструктура для земли</th>
      <th>Местоположение для домов</th>
      <th>Инфраструктура для домов</th>
      <th>Для квартир, комнаты</th>
      <th>Действие</th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= system.torg_apartment %>%</td>
        <td><%= system.torg_earth %>%</td>
        <td><%= system.torg_house %>%</td>
        <td><%= system.floor_apartment %>%</td>
        <td><%= system.location %>%</td>
        <td><%= system.infrastructure %>%</td>
        <td><%= system.location_house %>%</td>
        <td><%= system.infrastructura_house %>%</td>
        <td><%= system.rooms %>%</td>
        <td><%= link_to 'Изменить', edit_system_path(system), class: "button normal bg-orange fg-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
