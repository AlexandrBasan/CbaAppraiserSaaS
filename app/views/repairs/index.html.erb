<div class="panel" data-role="panel">
  <div class="panel-header bg-cyan">
    Тип ремонта
  </div>
  <div class="panel-content">
    <table class="table table-striped table-hover hovered striped bordered">
  <thead>
    <tr>
      <th>Высококачественный</th>
      <th>Евроремонт</th>
      <th>Улучшеный</th>
      <th>Обычный</th>
      <th>Без оздоблення</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.high %></td>
        <td><%= repair.eurorepair %></td>
        <td><%= repair.advanced %></td>
        <td><%= repair.simple %></td>
        <td><%= repair.nodecoration %></td>
        <td>
        <%= link_to 'Edit', edit_repair_path(repair) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>