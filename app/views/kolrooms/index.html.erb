<div class="panel" data-role="panel">
  <div class="panel-header bg-cyan">
     Количество комнат
  </div>
  <div class="panel-content">
    <table class="table table-striped table-hover hovered striped bordered">
      <thead>
      <tr>
        <th rowspan="2">Аналог</th>
        <th colspan="5">Об'єкт оцінки</th>
      </tr>
      <tr>
        <th>1</th>
        <th>2</th>
        <th>3</th>
        <th>4</th>
        <th>Действия</th>
      </tr>
      </thead>
  <tbody>
    <% @kolrooms.each do |kolroom| %>
      <tr>
        <td><%= kolroom.num_analog %></td>
        <td><%= kolroom.o1 %></td>
        <td><%= kolroom.o2 %></td>
        <td><%= kolroom.o3 %></td>
        <td><%= kolroom.o4 %></td>
        <td><%= link_to 'Edit', edit_kolroom_path(kolroom) %><br/>
          <%= link_to 'Destroy', kolroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_kolroom_path, :class => "button info" %>

</div>
</div>
