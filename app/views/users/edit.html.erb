<% provide(:title, "Edit user") %>
<h3 align="center"><%= t :update_your_profile %></h3>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label 'Имя' %>
          <%= f.text_field :name %>
        </div>

        <%= f.label 'e-mail' %>
        <%= f.text_field :email %>

        <%= f.label 'Пароль' %>
        <%= f.password_field :password %>

        <%= f.label 'Подтверждение пароля' %>
        <%= f.password_field :password_confirmation %>


        <p align="center"><%= f.submit (t 'button.ok'), class: "btn btn-sm btn-primary" %></p>
    <% end %>
  </div>
</div>