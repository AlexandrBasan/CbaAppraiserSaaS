<header class="navbar navbar-default navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% cache "logo" do %>
      <%= link_to image_tag("cba_logo.png", alt: ""), root_path, :class => "brand" %>
      <% end %>
      <nav>
        <ul class="nav nav-pills pull-right">
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <% if I18n.locale == :ru %>
                <%= image_tag("ru.png", alt: "RU")+ (" RU") %>
            <%else %>
                <%= image_tag("eng.png", alt: "EN")+ (" EN") %>
            <% end %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to image_tag("eng.png", alt: "EN")+ (" EN"), params.merge({:locale => :en}) %></li>
              <li><%= link_to image_tag("ru.png", alt: "RU")+ (" RU"), params.merge({:locale => :ru}) %></li>
            </ul>
          </li>
          <li></li>
        </ul>
      </nav>
    </div>
  </div>
</header>