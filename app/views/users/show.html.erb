<div class="row">
  <aside class="col-md-12">
    <section>
      <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title"><%= @user.email %></h3></div>
        <div class="panel-body">
          <!--GRAVATAR FOR USER-->
          <!--<%= gravatar_for @user %>-->
          <!--<%= @user.name %>-->
          <!--<dl class="dl-horizontal">
            <dt><%= t :name %>:</dt>
            <dd><%= @user.name %></dd>
            <dt><%= t :email %>:</dt>
            <dd><%= @user.email %></dd>
            <dt><%= t :created_at %>:</dt>
            <dd><%= @user.created_at %></dd>
            <dt><%= t :phone %>:</dt>
