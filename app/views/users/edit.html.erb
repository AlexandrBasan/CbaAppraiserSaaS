<% provide(:title, "Edit user") %>
<h3 align="center"><%= t :update_your_profile %></h3>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label 'Имя' %>
          <%= f.text_field :name %>
        </div>

        <%= f.label 'e-mail' %>
        <%= f.text_field :email %>

        <%= f.label 'Пароль' %>
        <%= f.password_field :password %>

        <%= f.label 'Подтверждение пароля' %>
        <%= f.password_field :password_confirmation %>

        <% if current_user && current_user.try(:admin?) %>
        <%= f.label 'Верификация' %>
        <%= f.select :verification, options_for_select([["Нет", false], ["Да", true]], selected: :option, :selected => @user.verification) %>
        <% end %>

        <p align="center"><%= f.submit (t 'button.ok'), class: "image-button info fg-white" %></p>
    <% end %>
  </div>
</div>