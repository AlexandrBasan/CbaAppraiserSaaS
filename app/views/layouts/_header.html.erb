<header>
<nav class="navigation-bar">
  <nav class="navigation-bar-content">
    <div class="element">
      <% cache "logo" do %>
          <%= link_to image_tag("cba_logo.png", alt: ""), root_path, :class => "brand" %>
      <% end %>

    </div>
    <div class="element">
      <a class="dropdown-toggle" href="#"><%= "Загрузка данных от банка" %></a>
      <ul class="dropdown-menu" data-role="dropdown">
        <li><%= link_to (I18n.t 'menu.house'), houses_path %></li>
        <li><%= link_to (I18n.t 'menu.appartment'), apartments_path %></li>
        <li><%= link_to (I18n.t 'menu.earth'), earths_path %></li>
      </ul>
    </div>

    <span class="element-divider"></span>

    <div class="element">
      <a class="dropdown-toggle"><%= "Загрузка аналогов" %> </a>
      <ul class="dropdown-menu" data-role="dropdown">
        <li><%= link_to (I18n.t 'menu.house'), anearts_path %></li>
        <li><%= link_to (I18n.t 'menu.appartment'), anaprtments_path %></li>
      </ul>
    </div>

      <% if signed_in? %>
        <div class="element">
          <a class="dropdown-toggle"> <%= current_user.email %></a>
          <ul class="dropdown-menu" data-role="dropdown">
            <%= render 'layouts/header/header_account_button' %>
          </ul>
        </div>
      <% if current_user && current_user.try(:admin?) %>
            <div class="element">
              <a class="dropdown-toggle"> <%= "Настройки системы" %></a>
              <ul class="dropdown-menu" data-role="dropdown">
                <% if current_user && current_user.try(:admin?) %>
                    <li><%= link_to 'Пользователи системы', users_path %></li>
                    <li class="divider"></li>
                <% else %>
                <% end %>
                <li><%= link_to "Настройка параметров и коэффициентов", earths_path %></li>
              </ul>
            </div>
      <% end %>
      <% else %>
          <li><%= link_to 'Вход', signin_path %></li>
      <% end %>

  </nav>
</nav>
</header>
