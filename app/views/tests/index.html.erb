<div class="well well-sm">
<div class="row">
  <div class="col-md-6">
    <h5 align="center"><%= (I18n.t 'button.import') %> (*.CSV) or (*.XLS)</h5>
    <%= form_tag import_tests_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag (I18n.t 'button.import'), class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>

  <div class="col-md-6">
    <!-- export to csv and xls -->
    <h5 align="center"><%= (I18n.t 'button.download') %> (*.CSV) or (*.XLS)</h5>
    <div class="panel panel-default">
      <div align="center" class="panel-body">
        <%= (I18n.t 'button.download') %> :
        <%= link_to "CSV", tests_path(format: "csv"), class: "btn btn-xs btn-default" %> |
        <%= link_to "Excel", tests_path(format: "xls"), class: "btn btn-xs btn-default" %>
      </div>
    </div>
    <!-- export to csv and xls -->
  </div>
  <div class="col-md-12">
    <div style="border-top: 1px solid lightgray; padding-bottom: 10px;"></div>
    <h5 align="center"><%= 'Обработка загруженных данных' %></h5>
    <h5 align="center"><%= link_to "Обработать данные", tests_path, class: "btn btn-sm btn-success" %></h5>
    <h5 align="center"><%= "Статус обработки..." %></h5>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100" style="width: 2%;">
        2%
      </div>
    </div>
  </div>
  </div>
</div>
<h3 align="center">Listing tests</h3>
<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Col 1 s</th>
    <th>Col 2 i</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <div align="center">
    <%= will_paginate %>
  </div>
  <tbody>
  <% @tests.each do |test| %>
      <tr>
        <td><%= test.col_1_s %></td>
        <td><%= test.col_2_i %></td>
        <td><%= link_to (I18n.t 'button.show'), test, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to (I18n.t 'button.edit'), edit_test_path(test), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to (I18n.t 'button.delete'), test, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
  <div align="center">
    <%= will_paginate %>
  </div>
</table>
<br>

