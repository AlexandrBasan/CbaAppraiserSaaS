<h1>Listing systems</h1>

<table>
  <thead>
    <tr>
      <th>Torg apartment</th>
      <th>Torg earth</th>
      <th>Torg house</th>
      <th>Floor apartment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= system.torg_apartment %></td>
        <td><%= system.torg_earth %></td>
        <td><%= system.torg_house %></td>
        <td><%= system.floor_apartment %></td>
        <td><%= link_to 'Show', system %></td>
        <td><%= link_to 'Edit', edit_system_path(system) %></td>
        <td><%= link_to 'Destroy', system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

